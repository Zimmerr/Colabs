<div class="">
    <% if flash[:notice] %>
        <div class="alert alert-warning" role="alert">
            <%= flash[:notice] %>
        </div>
    <% end %>
    <% if flash[:success] %>
        <div class="alert alert-success" role="alert">
            <%= flash[:success] %>
        </div>
    <% end %>
    <div>
	<h4 class="modal-title"><%= texto_descritivo %> </h4>
      </div>
      <%= form_for @project do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control input-lg', placeholder: "Nome do projeto" %>
        </div>
        <div class="form-group">
          <%= f.text_area :desc, class: 'form-control input-lg', placeholder: "Descreva teu projeto" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <%= f.submit texto_da_acao, class: 'btn btn-primary' %>
      </div>
      <% end %>

