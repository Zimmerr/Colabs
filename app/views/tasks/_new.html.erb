<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel" style="margin-right: 182px;color: #000000;margin-left: 150px;">New Task</h4>
</div>
<%= form_for @task, :url => { :action => "create" } do |f| %>
<div class="modal-body" style="color: #000000;">
  <div class="form-group">
    <%= f.hidden_field :project_id, :value => params[:project_id]%>
    <%= f.text_field :name, class: 'form-control input-lg', placeholder: "Nome da task" %>
  </div>
  <div class="form-group">
    <%= f.text_area :desc, class: 'form-control input-lg', placeholder: "Descreva a task" %>
  </div>
</div>
<div class="modal-footer">
  <%= submit_tag "Create" , class: 'btn btn-primary' %>
</div>
<% end %>
